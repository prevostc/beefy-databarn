<?xml version="1.0"?>
<clickhouse>
    <profiles>
        <default>
            <max_memory_usage from_env="CLICKHOUSE_MAX_MEMORY_USAGE">10000000000</max_memory_usage>
            <max_execution_time>300</max_execution_time>
            <use_uncompressed_cache>0</use_uncompressed_cache>
            <load_balancing>random</load_balancing>
        </default>
        <readonly>
            <readonly>1</readonly>
            <constraints>
                <max_execution_time>
                    <changeable_in_readonly/>
                    <min>0</min>
                    <max>180</max>
                </max_execution_time>
            </constraints>
        </readonly>
    </profiles>

    <access_control_improvements>
        <settings_constraints_replace_previous>true</settings_constraints_replace_previous>
    </access_control_improvements>

    <users>
        <default>
            <password from_env="CLICKHOUSE_PASSWORD">changeme</password>
            <networks>
                <ip>::/0</ip>
            </networks>
            <profile>default</profile>
            <quota>default</quota>
            <access_management>1</access_management>
        </default>

        <grafana>
            <password from_env="GRAFANA_CLICKHOUSE_PASSWORD">changeme</password>
            <networks>
                <ip>::/0</ip>
            </networks>
            <profile>readonly</profile>
            <quota>default</quota>
        </grafana>
    </users>

    <quotas>
        <default>
            <interval>
                <duration>3600</duration>
                <queries>0</queries>
                <errors>0</errors>
                <result_rows>0</result_rows>
                <read_rows>0</read_rows>
                <execution_time>0</execution_time>
            </interval>
        </default>
    </quotas>
</clickhouse>

