<?xml version="1.0"?>
<clickhouse>
    <profiles>
        <default>
            <max_memory_usage from_env="CLICKHOUSE_MAX_MEMORY_USAGE" replace="1">10000000000</max_memory_usage>
            <max_execution_time>300</max_execution_time>
            <use_uncompressed_cache>0</use_uncompressed_cache>
            <load_balancing>random</load_balancing>
        </default>
    </profiles>

    <access_control_improvements>
        <settings_constraints_replace_previous>true</settings_constraints_replace_previous>
        <table_engines_require_grant>true</table_engines_require_grant>
    </access_control_improvements>

    <users>
        <default>
            <password from_env="CLICKHOUSE_PASSWORD" replace="1">changeme</password>
            <networks replace="replace">
                <ip>127.0.0.1</ip>
            </networks>
            <!-- Enable RBAC management for this user -->
            <access_management>1</access_management>
        </default>
    </users>

</clickhouse>

