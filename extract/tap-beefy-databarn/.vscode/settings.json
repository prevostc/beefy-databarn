{
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "python.testing.pytestPath": "${workspaceFolder}/.venv/bin/pytest",
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.pipenvPath": "${workspaceFolder}/.venv/bin/pipenv",
  "mypy-type-checker.interpreter": ["${workspaceFolder}/.venv/bin/python"],
  "mypy-type-checker.path": ["${workspaceFolder}/.venv/bin/mypy"],
  "ruff.interpreter": ["${workspaceFolder}/.venv/bin/python"],
  "ruff.path": ["${workspaceFolder}/.venv/bin/ruff"],
  "ruff.lint.args": ["--config=${workspaceFolder}/../../pyproject.toml"],
  "ruff.format.args": ["--config=${workspaceFolder}/../../pyproject.toml"]
}
